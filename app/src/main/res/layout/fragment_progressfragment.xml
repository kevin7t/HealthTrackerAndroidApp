<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey"
    tools:context=".fragments.UserProgressFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:paddingTop="20dp"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="57dp">

                <ProgressBar
                    android:id="@+id/CalorieProgressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:indeterminate="false"
                    android:max="100"
                    android:minHeight="100dp"
                    android:padding="20dp"
                    android:progress="50"
                    android:progressTint="@color/colorPrimary"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="108dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="20dp"
                    android:weightSum="4">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/CalorieGoalText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Goal"
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/CalorieGoalValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2000"
                            android:textColor="@color/colorAccent" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/ConsumedCalorieText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Consumed"
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/ConsumedCalorieValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1000"
                            android:textColor="@color/colorAccent" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/BurntCaloriesText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Excercise"
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/BurntCaloriesValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/colorAccent" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/NetCalorieText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Net"
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/NetCalorieValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1000 "
                            android:textColor="@color/colorAccent" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="4dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:weightSum="4"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weight"
                    android:textColor="@color/colorSecondaryText"
                    android:layout_weight="4"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/WeightEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autoText="false"
                    android:text="70KG"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="4dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:weightSum="4"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calorie intake      "
                    android:textColor="@color/colorSecondaryText"
                    android:layout_weight="1"
                    android:textSize="18sp" />
                <EditText
                    android:id="@+id/calorieIntakeEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="000"
                    android:textColor="@color/colorAccent"
                    android:layout_weight="1"
                    android:textSize="18sp"/>

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/decreaseConsumedCaloriesButton"
                    android:layout_width="2dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="-"/>

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/increaseConsumedCaloriesButton"
                    android:layout_width="2dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="+"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="4dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:weightSum="4"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exercise calories"
                    android:textColor="@color/colorSecondaryText"
                    android:layout_weight="1"
                    android:textSize="18sp" />
                <EditText
                    android:id="@+id/burntCaloriesEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="000"
                    android:textColor="@color/colorAccent"
                    android:layout_weight="1"
                    android:textSize="18sp" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/decreaseBurntCaloriesButton"
                    android:layout_width="2dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="-"/>

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/increaseBurntCaloriesButton"
                    android:layout_width="2dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="+"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_navigation"
        android:layout_alignParentEnd="true"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/colorPrimary"
        android:elevation="8dp"
        android:tint="@color/colorWhite"
        app:borderWidth="0dp"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_account_circle_white_36dp" />


</android.support.constraint.ConstraintLayout>